{
  // ðŸ”¹ Editor settings
  "editor.fontFamily": "'Fira Code', 'Consolas', 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.tabSize": 4,
  "editor.fontWeight": "normal",
  "editor.fontSize": 12,
  "editor.rulers": [80, 100],
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.renderWhitespace": "boundary",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.suggestSelection": "first",
  "editor.acceptSuggestionOnEnter": "on",
  "editor.snippetSuggestions": "top",
  "editor.formatOnPaste": true,

  // ðŸ”¹ Sticky scroll (better navigation in large files)
  "editor.stickyScroll.enabled": true,

  // ðŸ”¹ Terminal settings
  "terminal.integrated.fontFamily": "Fira Code",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "terminal.integrated.env.windows": {
    "PATH": "${env:PATH};C:\\msys64\\mingw64\\bin"
  },
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",

  // ðŸ”¹ Auto-format settings
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll": "explicit"
  },

  // ðŸ”¹ C++ settings
  "C_Cpp.clang_format_fallbackStyle": "Google",
  "C_Cpp.default.includePath": ["${workspaceFolder}/**"],
  "C_Cpp.default.defines": ["_DEBUG", "UNICODE", "_UNICODE"],
  "C_Cpp.default.compilerPath": "C:\\msys64\\mingw64\\bin\\g++.exe",
  "C_Cpp.default.cStandard": "c17",
  "C_Cpp.default.cppStandard": "c++17",
  "C_Cpp.default.intelliSenseMode": "windows-gcc-x64",
  "C_Cpp.errorSquiggles": "enabled",
  "C_Cpp.warnings": "enabled",
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "files.associations": {
    "ostream": "cpp",
    "iostream": "cpp",
    "*.h": "cpp",
    "*.hpp": "cpp"
  },

  // ðŸ”¹ SQL settings
  "[sql]": {
    "editor.defaultFormatter": "cymonk.sql-formatter"
  },

  // ðŸ”¹ Python settings
  "python.analysis.typeCheckingMode": "basic",
  "[python]": {
    "editor.defaultFormatter": "ms-python.autopep8",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "isort.args": ["--profile", "black"],
  "python.analysis.extraPaths": [
    "C:\\Users\\Admin\\AppData\\Roaming\\Python\\Python311\\Lib\\site-packages"
  ],
  "python.analysis.autoImportCompletions": true,
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.variableTypes": true,

  // ðŸ”¹ Java settings
  "[java]": {
    "editor.defaultFormatter": "redhat.java",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },

  // ðŸ”¹ Enable inline AI suggestions (for better coding speed)
  "editor.inlineSuggest.enabled": true,

  // ðŸ”¹ File settings
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,

  // ðŸ”¹ Debug settings
  "debug.javascript.autoAttachFilter": "always",
  "debug.javascript.terminalOptions": {
    "skipFiles": ["<node_internals>/**"]
  },
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  }
}
